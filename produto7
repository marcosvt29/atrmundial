<script>
  const WHATS = '5599999999999';
  const product = { id: 6, name: "Relógio do Jardel", price: 16.0, priceLabel: 'R$ 16,00', img: 'imagens/06.jpeg', images: ["imagens/06.jpeg"], description: `Relógio casual com bom custo-benefício.`, specs: {"Material": "Aço", "Movimento": "Quartz", "Diâmetro": "38mm"} };

  document.getElementById('prodName').textContent = product.name;
  document.getElementById('prodPrice').textContent = product.priceLabel;
  document.getElementById('prodDesc').textContent = product.description;
  document.getElementById('heroImg').src = product.img;

  const gallery = document.getElementById('gallery');
  product.images.forEach((src, idx)=>{ const img = document.createElement('img'); img.src = src; if(idx===0) img.classList.add('active'); img.onclick = ()=>{ document.getElementById('heroImg').src = src; document.querySelectorAll('.gallery img').forEach(i=>i.classList.remove('active')); img.classList.add('active'); }; gallery.appendChild(img); });

  const specTable = document.getElementById('specTable');
  for(const k in product.specs){ const tr = document.createElement('tr'); tr.innerHTML = `<td style="padding:6px;border-bottom:1px solid #eee;font-weight:700">${k}</td><td style="padding:6px;border-bottom:1px solid #eee">${product.specs[k]}</td>`; specTable.appendChild(tr); }

  document.getElementById('addCartBtn').onclick = ()=>{ const qty = parseInt(document.getElementById('qtyInput').value) || 1; const cart = JSON.parse(localStorage.getItem('lojão_cart_v1')||'[]'); const found = cart.find(i=>i.id===product.id); if(found){ found.qty += qty; } else { cart.push({id:product.id,name:product.name,price:product.price,qty:qty}); } localStorage.setItem('lojão_cart_v1',JSON.stringify(cart)); alert('Adicionado ao carrinho'); };

  document.getElementById('buyNowBtn').onclick = ()=>{ const qty = parseInt(document.getElementById('qtyInput').value) || 1; const msg = `Olá! Quero comprar ${qty}x ${product.name} — ${product.priceLabel}`; window.open(`https://wa.me/${WHATS}?text=${encodeURIComponent(msg)}`); };

  document.getElementById('calcFreteBtn').onclick = ()=>{ const cep = document.getElementById('cepInput').value.replace(/\D/g,''); if(!cep || cep.length!==8){ document.getElementById('freteResult').textContent = 'Informe um CEP válido (8 dígitos).'; return; } const first = parseInt(cep[0]); const price = first<=3? 'R$ 20,00 (Sedex - 5 dias)':'R$ 12,00 (PAC - 8 dias)'; document.getElementById('freteResult').textContent = `Frete estimado: ${price}`; };

  document.getElementById('ano').textContent = new Date().getFullYear();
</script>
